package com.example.serialcommdemo.controller;

import com.example.serialcommdemo.writer.SerialPortWriter;
import lombok.AllArgsConstructor;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

/**
 * @author Wei Zhanwei
 * @since 2023/3/20 19:26
 **/
@RequestMapping
@RestController
@AllArgsConstructor
public class WebController {
    private SerialPortWriter serialPortWriter;

    @RequestMapping("hello")
    public String hello() {
        serialPortWriter.write("COM1", "hello serial port starter!");
        return "success";
    }
}
